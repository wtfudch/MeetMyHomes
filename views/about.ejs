    }

    @media (max-width: 768px) {
      .sobre-nos {
        flex-direction: column;
        text-align: center;
      }

      .sobre-nos-image,
      .sobre-nos-content {
        flex: none;
        width: 100%;
        max-width: 100%;
      }

      .sobre-nos-image img {

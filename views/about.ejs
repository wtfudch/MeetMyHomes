      background-position: center;
      color: white;
      padding: 6rem 0;
      text-align: center;
      margin-bottom: 4rem;
      border-radius: 20px;
    }

    .about-us-hero .lead {
      font-size: 1.3rem;
      max-width: 800px;
      margin: 0 auto;
      opacity: 0.9;
    }

    /* Story Section */
    section {
      padding: 3rem 0;
      background-color: #fff;
      border-radius: 20px;
      margin-bottom: 2rem;
      box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }

    /* Guarantee Section */
    .guarantee-container {
      display: flex;
      justify-content: space-around;
      flex-wrap: wrap;
      gap: 2rem;
      margin: 2rem 0;
    }

    .guarantee-card {
      text-align: center;
      padding: 2rem;
      min-width: 200px;
      border-radius: 20px;
      transition: transform 0.3s ease;
      flex: 1 1 calc(33.33% - 2rem); /* Three cards per row, accounting for gap */
    }

    .guarantee-card:hover {
      transform: translateY(-5px);
    }

    .guarantee-emoji {
      font-size: 2.5rem;
      margin-bottom: 0.5rem;
    }

    .guarantee-label {
      font-size: 1.1rem;
      color: #666;
      margin-bottom: 0.5rem;
    }

    .guarantee-description {
      font-size: 0.9rem;
      color: #333;
    }



    /* CTA Section */
    .cta-section {
      text-align: center;
      padding: 3rem 0;
      background-color: #e9ecef;
      border-radius: 20px;
      box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }

    .cta-button {
      display: inline-block;
      padding: 1rem 2rem;
      background-color: #FF385C;
      color: white;
      text-decoration: none;
      border-radius: 25px;
      font-size: 1.1rem;
      font-weight: 600;
      transition: background-color 0.3s ease;

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title %> - MeetMyHomes</title>
  <link rel="stylesheet" href="/css/styles.css">
  <style>
    .container {
      max-width: 1200px;
      margin: 0 auto;
      padding: 0 1.5rem;
    }

    .properties-grid {
      display: grid;
      grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
      gap: 2.5rem;
      margin: 3rem 0;
      padding: 0 0.5rem;
    }

    .property-card {
      border: 1px solid #eaeaea;
      border-radius: 10px;
      overflow: hidden;
      background: #ffffff;
      transition: transform 0.3s ease, box-shadow 0.3s ease;
      box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
    }

    .property-card:hover {
      transform: translateY(-8px);
      box-shadow: 0 6px 15px rgba(0, 0, 0, 0.15);
    }

    .property-image {
      width: 100%;
      height: 250px;
      object-fit: cover;
      transition: opacity 0.3s ease;
    }

    .property-image:hover {
      opacity: 0.9;
    }

    .property-info {
      padding: 1.8rem;
      background: #f8f9fa;
    }

    .price {
      font-size: 1.7rem;
      font-weight: 700;
      color: #2c3e50;
      margin-bottom: 0.5rem;
    }

    .property-info h2 {
      font-size: 1.4rem;
      color: #2c3e50;
      margin: 0.5rem 0;
      font-weight: 600;
      line-height: 1.3;
    }

    .property-info p {
      font-size: 1rem;
      color: #34495e;
      margin: 0.3rem 0;
      line-height: 1.5;
    }

    .features {
      display: flex;
      flex-wrap: wrap;
      gap: 0.7rem;
      margin: 1.2rem 0 0.5rem;
    }

    .feature {
      background: #f8f9fa;
      padding: 0.4rem 1rem;
      border-radius: 20px;
      font-size: 0.95rem;
      color: #2c3e50;
      border: 1px solid #dfe6e9;
      transition: background-color 0.3s ease;
    }

    .feature:hover {
      background-color: #dfe6e9;
    }

    .terrain-info {
      padding: 1.2rem;
      background: #f1f1f1;
      text-align: center;
    }

    .zoning-type {
      font-weight: 600;
      color: #2c3e50;
      margin-right: 0.8rem;
    }

    .terrain-badge {
      padding: 0.3rem 0.8rem;
      border-radius: 12px;
      color: white;
      font-weight: 500;
      font-size: 0.9rem;
    }

    .terrain-badge.rural {
      background-color: #e74c3c;
    }

    .terrain-badge:not(.rural) {
      background-color: #2ecc71;
    }

    a {
      text-decoration: none;
      color: inherit;
    }

    @media (max-width: 768px) {
      .properties-grid {
        grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
        gap: 2rem;
        margin: 2rem 0;
      }

      .property-image {
        height: 200px;
      }

      .property-info {
        padding: 1.2rem;
      }

      .price {
        font-size: 1.5rem;
      }

      .property-info h2 {
        font-size: 1.2rem;
      }
    }

    @media (max-width: 480px) {
      .container {
        padding: 0 1rem;
      }

      .properties-grid {
        grid-template-columns: 1fr;
        gap: 1.5rem;
      }

      .property-image {
        height: 180px;
      }

      .property-info {
        padding: 1rem;
      }
    }
  </style>
</head>
<body>
  <%- include('partials/header') %>

  <main class="container">
    <h1>Properties for Sale</h1>
    
    <div class="properties-grid">
      <% properties.forEach(property => { %>
        <div class="property-card">
          <a href="/properties/<%= property.id %>">
            <img src="../images/<%= property.id %>/<%= property.id %>-1.jpg" alt="<%= property.title %>" class="property-image" loading="lazy" onerror="this.src='/images/fallback.jpg'; this.onerror=null;">
            <div class="property-info">
              <div class="price"><%= property.price %></div>
              <h2><%= property.title %></h2>
              <p><%= property.location %></p>
              <div class="features">
                <span class="feature"><%= property.area %></span>
                <% if (property.bedrooms) { %>
                  <span class="feature"><%= property.bedrooms %> beds</span>
                <% } %>
                <% if (property.bathrooms) { %>
                  <span class="feature"><%= property.bathrooms %> baths</span>
                <% } %>
              </div>
            </div>
          </a>
        </div>
      <% }); %>
    </div>
  </main>

  <%- include('partials/footer') %>
</body>
</html>